node {
 try  {
 notify('Job Started') 

     
  stage('Git-Checkout') {
   git 'https://github.com/devops311/ansible-configuration.git'
  }
      
     
 stage(' Downloading Jar From Artifactory Locally'){
    def server= Artifactory.server 'Artifactory'
    def downloadSpec = """{
    "files": [
    {
      "pattern": "userproject/*.war",
      "target": "/root/.jenkins/workspace/production-deployment-role/terraform/warstorageprod/"
      
    }
    ]
    }"""
    server.download(downloadSpec)
   
}



/*
stage('Geting Ready For Ansible') {
  sh label: 'Jenkins', script: "echo '<h1> TASK BUILD ID: ${env.BUILD_DISPLAY_NAME}</h1>' > ansible/index.html"
  }
  */
  
  stage('Ansible Configuration'){
  sh label: 'terraform', script: 'ansible-playbook -i /root/.jenkins/workspace/terraform-deployment-role/terraform/jenkins-ci.ini -u ubuntu --key /root/.ssh/key.pem  /root/.jenkins/workspace/ansible-deployment-role/ansible-files/web-playbook.yaml'
}  

notify('Job Completed')   
} catch (err) {
  notify("Error ${err}")
  currentBuild.result = 'FAILURE'
}
}

def notify(status){
    emailext (
	to: "devashishkumar311@gmail.com",
	subject: "${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
	 body: """<p>${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
	<p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>""",
		)
	}
